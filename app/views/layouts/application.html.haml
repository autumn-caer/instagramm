!!! 5
%html
%head
	%title Instagramm
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags

%body
	%nav.navbar.navbar-dark.bg-dark
		.container
			.navbar-brand= link_to "Instagramm", root_path
			.float-left
				- if user_signed_in?
					%ul.nav.navbar-nav.navbar-dark.navbar-expand
						%li.nav-item= link_to "Gram It!", new_pic_path
						%li.nav-item= link_to "Settings", edit_user_registration_path
						%li.nav-item= link_to "Sign Out", destroy_user_session_path, method: :delete

				- else
					%ul.navbar-nav
						%li.nav-item= link_to "Join", new_user_registration_path
						%li.nav-item= link_to "Log In", new_user_session_path

	.container
		-flash.each do |name, msg|
			=content_tag :div, msg, class: "alert alert-info"

		= yield
